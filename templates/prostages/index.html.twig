{% extends 'base.html.twig' %}
{% block TitreContenu %}
<h1> Bienvenue sur la page d'accueil de Prostages </h1>
{% endblock %}
{% block contenu %}
    
    {# affichage de tous les stages disponible #}
    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Nom du stage</th>
        <th scope="col">Nom de l'entreprise</th>
        </tr>
    </thead>
    <tbody>
    {% for stage in stages %}         
        <tr>
            <td><a href="/stages/{{stage.id}}">{{stage.titre}} </a></td>
            <td>{{stage.getEntreprise.nom}}</td>
        </tr>
        
    {% else %}
        <p> Aucun stage n'est actuellement propos√©, revenez plus tard. </p> 
    {% endfor %}
     </tbody>
    </table>
{% endblock %}
